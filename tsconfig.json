{
  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "module": "node16",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "server/*": [
        "./server/*"
      ],
      "site/*": [
        "./site/*"
      ]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}